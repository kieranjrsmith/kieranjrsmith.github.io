{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ÔøΩ Switch CMS to Local",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/switch-cms-mode.sh",
            "args": ["local"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bash"
        },
        {
            "name": "üåê Switch CMS to Live",
            "type": "node", 
            "request": "launch",
            "program": "${workspaceFolder}/switch-cms-mode.sh",
            "args": ["live"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bash"
        },
        {
            "name": "üìä Check CMS Status",
            "type": "node",
            "request": "launch", 
            "program": "${workspaceFolder}/switch-cms-mode.sh",
            "args": ["status"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "bash"
        },
        {
            "name": "üöÄ Start Decap CMS Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["decap-server"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
